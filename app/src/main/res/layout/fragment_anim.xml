<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <View
        android:id="@+id/mark_layout"
        android:layout_width="@dimen/dimen_120px"
        android:layout_height="match_parent"
        android:background="@color/fuxk_settle_black_mark" />

    <com.haven.hckp.view.CustomRelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/attrs_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100px"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/cancel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dimen_30px"
                android:src="@drawable/fuxk_cancel" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/fuxk_base_divide_line_color" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/image_layout_shape"
            android:gravity="center"
            android:padding="20dip"
            android:src="@drawable/ic_launcher" />
    </com.haven.hckp.view.CustomRelativeLayout>

</LinearLayout>