<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/graywhite">

    <include layout="@layout/title_bar" />


    <LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:orientation="vertical">

        <!-- 反馈意见 -->

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/form_car_no"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/car_no"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical|right"
                android:paddingRight="60dip"
                android:layout_gravity="right"
                android:background="@color/white"
                android:singleLine="true"
                android:focusable="true"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:focusableInTouchMode="true"
                android:layout_alignParentRight="true"/>

            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="车牌" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/form_car_weight"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="载重" />


            <TextView
                style="@style/setting_text_style2"
                android:id="@+id/car_weight"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dip"
                android:text="" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/form_car_length"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="车长" />

            <TextView
                style="@style/setting_text_style2"
                android:id="@+id/car_length"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dip"
                android:text="" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>


        <View
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />
        <RelativeLayout
            android:id="@+id/form_car_width"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="车宽" />

            <TextView
                style="@style/setting_text_style2"
                android:id="@+id/car_width"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dip"
                android:text="" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />
        <RelativeLayout
            android:id="@+id/form_car_height"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="车高" />

            <TextView
                style="@style/setting_text_style2"
                android:id="@+id/car_height"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dip"
                android:text="" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />
    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:orientation="vertical">

        <!-- 反馈意见 -->

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/form_car_id"
            android:background="@color/white"
            android:paddingTop="20dip"
            android:paddingBottom="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="行驶证" />

            <TextView
                style="@style/setting_text_style2"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dip"
                android:text="" />


            <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60dip"
                android:src="@drawable/xj" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_border"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/padding_10px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_size="small"
            bootstrap:bb_type="success"
            android:text="保存"
            android:id="@+id/button" />
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_border"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/padding_10px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_size="small"
            bootstrap:bb_type="warning"
            android:text="删除这辆车"
            android:id="@+id/delbtn" />
    </LinearLayout>


</LinearLayout>