<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapthumbnail="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/graywhite">

    <include layout="@layout/title_bar" />


    <!--<com.beardedhen.androidbootstrap.BootstrapCircleThumbnail-->
        <!--android:id="@+id/image_view"-->
        <!--android:layout_marginTop="20dip"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--bootstrap:bt_roundedCorners="false"-->
        <!--bootstrap:bct_size="xlarge"/>-->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:id="@+id/image_view"
        android:scaleType="center"
        />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="vertical">

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/from_photo"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="拍照" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>


        <View
            android:layout_height="1px"
            android:layout_marginLeft="30dip"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/from_album"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="从相册选择" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_border"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/padding_10px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_size="small"
            bootstrap:bb_type="success"
            android:text="开始上传"
            android:id="@+id/upload_btn" />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_lancher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>