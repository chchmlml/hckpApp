<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/graywhite">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:id="@+id/user_info_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:fadingEdge="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15.0dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
                    android:id="@+id/user_info_userface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_defult_userimage"
                    bootstrap:bct_size="default"/>

                <!--<TextView-->
                    <!--android:id="@+id/user_info_phone"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="18221302153"-->
                    <!--android:layout_marginTop="30dip"-->
                    <!--android:layout_toRightOf="@id/user_info_userface"-->
                    <!--android:textSize="13dip"-->
                    <!--android:textColor="@color/author_text" />-->

                <!--<TextView-->
                    <!--android:id="@+id/user_info_username"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_toRightOf="@id/user_info_userface"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:text="chchmlml"-->
                    <!--android:textSize="13dip"-->
                    <!--android:textColor="@color/author_text" />-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center_vertical"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/table_above_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23.0dip"
                    android:duplicateParentState="true"
                    android:textSize="13dip"
                    android:textColor="@color/grayslate"
                    android:text="用户名：" />

                <TextView
                    android:id="@+id/ts_u_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10.0dip"
                    android:duplicateParentState="true"
                    android:textSize="14dip"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/table_mid_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:duplicateParentState="true"
                    android:textSize="13dip"
                    android:textColor="@color/grayslate"
                    android:text="手机号码：" />

                <TextView
                    android:id="@+id/ts_u_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10.0dip"
                    android:duplicateParentState="true"
                    android:textSize="14dip"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/table_mid_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:duplicateParentState="true"
                    android:textSize="13dip"
                    android:textColor="@color/grayslate"
                    android:text="用户昵称：" />

                <TextView
                    android:id="@+id/ts_real_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10.0dip"
                    android:duplicateParentState="true"
                    android:textSize="14dip"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/table_below_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:duplicateParentState="true"
                    android:textSize="13dip"
                    android:textColor="@color/grayslate"
                    android:text="注册时间：" />

                <TextView
                    android:id="@+id/ts_u_regtime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10.0dip"
                    android:duplicateParentState="true"
                    android:textSize="14dip"
                    android:textColor="#ff000000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:gravity="center_vertical"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginTop="@dimen/padding_10px">



                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/btn_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:layout_margin="1.0dip"
                    android:layout_marginTop="10.0dip"
                    bootstrap:bb_roundedCorners="true"
                    bootstrap:bb_size="small"
                    bootstrap:bb_type="success"
                    android:text="@string/logout_btn"
                    android:onClick="viewClick"  />
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>