<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical">
    <!-- title bar -->
    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/linear_desc"
        android:layout_below="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/liner1"
            android:layout_below="@id/title_bar"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/gray2" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tip1"
                    style="@style/detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dispath_detail_tag1"  />


                <TextView
                    android:id="@+id/tp_di_sn"
                    android:layout_toRightOf="@id/tip1"
                    style="@style/detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </RelativeLayout>

            <View
                android:layout_height="1px"
                android:layout_marginLeft="30dip"
                android:layout_width="match_parent"
                android:background="@color/gray2" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tip2"
                    style="@style/detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dispath_detail_tag3" />


                <TextView
                    android:id="@+id/tp_di_startdate"
                    android:layout_toRightOf="@id/tip2"
                    style="@style/detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </RelativeLayout>

            <View
                android:layout_height="1px"
                android:layout_marginLeft="30dip"
                android:layout_width="match_parent"
                android:background="@color/gray2" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tip3"
                    style="@style/detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dispath_detail_tag4" />


                <TextView
                    android:id="@+id/order_detail_style"
                    android:layout_toRightOf="@id/tip3"
                    style="@style/detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </RelativeLayout>


            <View
                android:layout_height="1px"
                android:layout_marginLeft="30dip"
                android:layout_width="match_parent"
                android:background="@color/gray2" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tip4"
                    style="@style/detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dispath_detail_tag5" />


                <TextView
                    android:id="@+id/tp_di_remark"
                    android:layout_toRightOf="@id/tip4"
                    style="@style/detail_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </RelativeLayout>


            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="@color/gray2" />


        </LinearLayout>
        <LinearLayout
            android:background="@color/grayslate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5px"
            android:orientation="horizontal">

            <TextView
                style="@style/order_detail_style"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dispath_detail_title2" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv"
            android:background="@color/graywhite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_border"
        android:gravity="center_horizontal|center_vertical"
        android:padding="@dimen/padding_10px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            bootstrap:bb_icon_left="fa-check-square-o"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_size="small"
            bootstrap:bb_type="success"
            android:text="@string/report_price"
            android:id="@+id/button" />
        />
    </LinearLayout>
</RelativeLayout>