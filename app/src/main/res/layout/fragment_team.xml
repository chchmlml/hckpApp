<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical">

    <!-- title bar -->
    <include layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/to_find_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_10px"
            android:paddingRight="@dimen/padding_10px"
            android:src="@drawable/search_bg" />
    </LinearLayout>

    <com.haven.hckp.widght.PullToRefreshListView
        android:id="@+id/listview_order"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
