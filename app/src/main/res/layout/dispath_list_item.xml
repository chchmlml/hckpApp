<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:background="@color/white"
        android:layout_marginBottom="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="8dip"
                android:layout_marginLeft="10dip"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/rili" />

            <TextView
                android:id="@+id/label1"
                style="@style/order_text_style"
                android:layout_marginLeft="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货时间" />

            <TextView
                android:id="@+id/tp_o_reachdate"
                style="@style/order_text_style"
                android:layout_toRightOf="@+id/label1"
                android:layout_marginLeft="@dimen/padding_20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-09-09" />
            <ImageView
                android:id="@+id/status_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:layout_width="50dip"
                android:layout_height="35dip"
                android:src="@drawable/trans_status_0" />

        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <LinearLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tip_tc_name"
                        style="@style/order_text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dip"
                        android:layout_weight="1"
                        android:text="车队" />

                    <TextView
                        android:id="@+id/tp_tc_name"
                        android:layout_toRightOf="@id/tip_tc_name"
                        style="@style/order_text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:text="北京" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tip_tc_name2"
                        style="@style/order_text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dip"
                        android:layout_weight="1"
                        android:text="电话" />

                    <TextView
                        android:id="@+id/tp_tc_phone"
                        android:layout_toRightOf="@id/tip_tc_name2"
                        style="@style/order_text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:text="北京" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

    </LinearLayout>
</LinearLayout>