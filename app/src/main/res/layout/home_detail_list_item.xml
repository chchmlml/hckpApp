<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="20dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_weight="1">

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="8dip"
                android:layout_marginLeft="10dip"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/rili" />

            <TextView
                android:id="@+id/label1"
                style="@style/order_text_style"
                android:layout_marginLeft="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货时间" />

            <TextView
                android:id="@+id/reachdate"
                style="@style/order_text_style"
                android:layout_toRightOf="@+id/label1"
                android:layout_marginLeft="@dimen/padding_20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-09-09" />

            <TextView
                android:id="@+id/status"
                style="@style/order_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="状态" />
        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <LinearLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="8dip"
                        android:layout_marginLeft="10dip"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:src="@drawable/start_place" />

                    <TextView
                        android:id="@+id/start_city"
                        style="@style/order_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dip"
                        android:layout_weight="1"
                        android:text="北京" />
                </RelativeLayout>


                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_marginTop="8dip"
                        android:layout_marginLeft="10dip"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:src="@drawable/end_place" />

                    <TextView
                        android:id="@+id/end_city"
                        android:layout_marginLeft="40dip"
                        style="@style/order_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海" />

                    <TextView
                        android:id="@+id/icon_status"
                        style="@style/order_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="[审]"
                        android:textColor="@color/blue" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingRight="@dimen/padding_10px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/widget_right_icon" />
    </LinearLayout>
</LinearLayout>