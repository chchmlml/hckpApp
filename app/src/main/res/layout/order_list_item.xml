<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginBottom="20dip"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="8dip"
                android:layout_marginLeft="10dip"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/rili" />

            <TextView
                android:id="@+id/label1"
                style="@style/order_text_style"
                android:layout_marginLeft="40dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货时间" />

            <TextView
                android:id="@+id/end_time"
                style="@style/order_text_style"
                android:layout_toRightOf="@+id/label1"
                android:layout_marginLeft="@dimen/padding_20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-09-09" />

            <ImageView
                android:id="@+id/status_icon"
                android:layout_alignParentRight="true"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:src="@drawable/zhidingwo" />
        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <LinearLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="8dip"
                        android:layout_marginLeft="10dip"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:src="@drawable/start_place" />

                    <TextView
                        android:id="@+id/start_place"
                        style="@style/order_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dip"
                        android:layout_weight="1"
                        android:text="北京" />
                </RelativeLayout>

                <View
                    android:layout_height="1px"
                    android:layout_marginLeft="30dip"
                    android:layout_width="match_parent"
                    android:background="@color/gray2" />

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_marginTop="8dip"
                        android:layout_marginLeft="10dip"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:src="@drawable/end_place" />

                    <TextView
                        android:id="@+id/end_place"
                        android:layout_marginLeft="40dip"
                        style="@style/order_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上海" />

                    <TextView
                        android:id="@+id/icon_status"
                        style="@style/order_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="[审]"
                        android:textColor="@color/blue" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/send_price_btn"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:src="@drawable/btn_unbaojia" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/desc"
                android:layout_marginLeft="40dip"
                style="@style/order_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="描述" />
        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

    </LinearLayout>
</LinearLayout>