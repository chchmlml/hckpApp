<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical">
    <!-- title bar -->
    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />


    <LinearLayout
        android:id="@+id/liner1"
        android:layout_below="@id/title_bar"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="10dip"
                android:layout_marginLeft="30dip"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/start_place" />


            <TextView
                android:id="@+id/start_city"
                style="@style/detail_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dip"
                android:layout_weight="1"
                android:text="" />

        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_marginLeft="30dip"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginTop="10dip"
                android:layout_marginLeft="30dip"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/end_place" />

            <TextView
                android:id="@+id/end_city"
                style="@style/detail_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dip"
                android:layout_weight="1"
                android:text="" />

        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_marginLeft="30dip"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tip_enddate"
                style="@style/detail_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货时间" />


            <TextView
                android:id="@+id/reach_date"
                android:layout_toRightOf="@id/tip_enddate"
                style="@style/detail_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <ImageView
                android:id="@+id/status_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:src="@drawable/trans_status_0" />



        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/liner2"
        android:layout_below="@id/liner1"
        android:background="@color/white"
        android:layout_marginTop="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tip_kms"
                style="@style/detail_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货物数" />


            <TextView
                android:id="@+id/goods_weight"
                android:layout_toRightOf="@+id/tip_kms"
                style="@style/detail_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_marginLeft="30dip"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tip_desc"
                style="@style/detail_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货物重量" />


            <TextView
                android:id="@+id/goods_num"
                android:layout_toRightOf="@id/tip_desc"
                style="@style/detail_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </RelativeLayout>
        <View
            android:layout_height="1px"
            android:layout_marginLeft="30dip"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tip_remark"
                style="@style/detail_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注" />


            <TextView
                android:id="@+id/remark"
                android:layout_toRightOf="@id/tip_remark"
                style="@style/detail_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </RelativeLayout>

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner3"
        android:layout_below="@+id/liner2"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="vertical">

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/goods_input_1"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tip_goods_1"
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="收货" />

            <TextView
                android:id="@+id/goods_get"
                style="@style/setting_text_style2"
                android:layout_toRightOf="@+id/tip_goods_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20/50" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>


        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dip"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/goods_input_2"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tip_goods_2"
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="签收" />

            <TextView
                android:id="@+id/goods_send"
                style="@style/setting_text_style2"
                android:layout_toRightOf="@+id/tip_goods_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20/50" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>


        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/liner4"
        android:layout_below="@+id/liner3"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="vertical">

        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/goods_input_3"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="签收拍照" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@drawable/setting_arrow" />
        </RelativeLayout>


        <View
            android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="@color/gray2" />

    </LinearLayout>

