<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/graywhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- 反馈意见 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/form_car_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <EditText
                android:id="@+id/input_phone"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|right"
                android:paddingRight="60dip"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />
            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="手机号" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/form_car_weight"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <EditText
                android:id="@+id/input_pwd"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@color/white"
                android:focusable="true"
                android:inputType="textPassword"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|right"
                android:paddingRight="60dip"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />
            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="密码" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/form_car_length"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <EditText
                android:id="@+id/input_pwd2"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|right"
                android:paddingRight="60dip"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />
            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="确认密码" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/form_car_width"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <EditText
                android:id="@+id/input_username"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|right"
                android:paddingRight="60dip"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />
            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="用户名" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:background="@color/gray2" />

        <RelativeLayout
            android:id="@+id/form_car_height"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <EditText
                android:id="@+id/input_realname"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|right"
                android:paddingRight="60dip"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />
            <TextView
                style="@style/setting_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="真实姓名" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:background="@color/gray2" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <EditText
                android:id="@+id/input_code"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical|left"
                android:paddingLeft="30dip"
                android:singleLine="true"
                android:hint="验证码"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/code_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dip"
                android:layout_centerVertical="true"
                android:onClick="getCode"
                android:text="获取验证码"
                bootstrap:bb_roundedCorners="true"
                android:layout_alignParentRight="true"
                bootstrap:bb_size="small"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20.0dip"
            android:onClick="viewClick"
            android:text="@string/register"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_size="small"
            bootstrap:bb_type="success" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20.0dip"
            android:onClick="viewClick"
            android:text="已有账号去登录"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_size="small" />
    </LinearLayout>
</LinearLayout>