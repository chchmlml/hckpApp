<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="title_bar_style">
        <item name="android:background">@drawable/titlebg</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/loading</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">@color/listitem_white</item>
    </style>

    <style name="h1_style">
        <item name="android:textSize">22.0dip</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="content_style">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="content_style_gray">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="setting_text_style">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
    </style>

    <style name="order_text_style">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">3dip</item>
    </style>
    <style name="text_style">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">3dip</item>
    </style>
    <style name="order_detail_style">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">3dip</item>
        <item name="android:width">80dip</item>
    </style>
    <style name="order_start_style">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:padding">3dip</item>
    </style>

    <style name="order_title_style">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">3dip</item>
    </style>

    <style name="order_title_style2">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">3dip</item>
    </style>

    <style name="small_divider">
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/small_divider</item>
    </style>

    <style name="widget_listview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:dividerHeight">1.0dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
    </style>

</resources>
